<% if(page == "compose"){ %>
<div class="container content">
    <h1 class="h1">Compose New Entry</h1>
    <form class="mb-4" action="/" method="post" enctype="multipart/form-data">
        <div class="form-group mb-4">
            <label for="title">Title of entry</label><br>
            <input type="text" class="form-control" name="title" placeholder="Enter New Title" aria-describedby="titleOfEntry" autocomplete="off" autofocus>
        </div>
        <div class="form-group mb-4">
            <label for="content">Content of entry</label>
            <textarea type="text" rows="15" class="form-control" name="content" placeholder="Enter New Content" aria-describedby="contentOfEntry" autocomplete="off"></textarea>
        </div>
        <%for(let index = 0; index < maxImageCount; index++){%>
            <div class="form-group mb-4">
                <label for="image">Upload an image for this entry: </label>
                <input type="file" name="img" accept=".jpg, .png">
            </div>
        <%}%>
        <button type="submit" class="btn btn-lg btn-block btn-light">Submit</button>
    </form>
</div>
<%}%>